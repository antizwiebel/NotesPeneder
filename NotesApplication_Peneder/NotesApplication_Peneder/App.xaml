<Application
    x:Class="NotesApplication_Peneder.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NotesApplication_Peneder"
    RequestedTheme="Light">
    <Application.Resources>
        <x:String x:Key="Appname">Note </x:String>
        <local:ViewModelLocator x:Key="Locator" />
        <LinearGradientBrush x:Key="GradientBrush" EndPoint="0.5,1" StartPoint="0.5,0">
            <LinearGradientBrush.RelativeTransform>
                <CompositeTransform CenterY="0.5" CenterX="0.5" Rotation="338.199" TranslateX="0.35"/>
            </LinearGradientBrush.RelativeTransform>
            <GradientStop Color="#FF00A1F1" Offset="0.5"/>
            <GradientStop Color="#FF00A1F1" Offset="0.5"/>
            <GradientStop Color="#FF7CBB00" Offset="0.5"/>
            <GradientStop Color="#FF7CBB00" Offset="0.5"/>
        </LinearGradientBrush>

    </Application.Resources>
</Application>
